# =========================
# BFS to farthest reachable tile
# =========================
def farthest_reachable(start, blocked):
    sx, sy = start
    q = deque([(sx, sy, 0)])
    seen = {(sx, sy): 0}
    dirs = [(1,0),(-1,0),(0,1),(0,-1)]
    best = (sx, sy, 0)
    while q:
        x, y, d = q.popleft()
        if d > best[2]:
            best = (x, y, d)
        for dx, dy in dirs:
            nx, ny = x + dx, y + dy
            if not (0 <= nx < PLAY_W and 0 <= ny < PLAY_H):
                continue
            if (nx, ny) in blocked:
                continue
            if (nx, ny) not in seen:
                seen[(nx, ny)] = d + 1
                q.append((nx, ny, d + 1))
    return (best[0], best[1])

